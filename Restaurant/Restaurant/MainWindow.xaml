<Window x:Class="Restaurant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant"
        mc:Ignorable="d"
        Title="La Burtanica" Height="650" Width="450" WindowStartupLocation="CenterScreen" Background="#f9dcc4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="206*"/>
            <RowDefinition Height="293*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2" Grid.Row="0" Fill="#f8edeb"></Rectangle>
        <Image Grid.Row="0" Grid.ColumnSpan="2" Source="./Resources/Images/logo1.png" Margin="-175,0,-49,0"/>
        <Label Grid.Row="1" Grid.ColumnSpan="2" Content ="La Burtanica&#xa; -Restaurant-" HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center" VerticalAlignment="Top" FontSize="45" FontFamily="Lucida Calligraphy" Height="205"/>
        <Rectangle Grid.Row="2" Grid.ColumnSpan="2" Fill="#f8edeb"></Rectangle>
        <Image Grid.Column="0" Grid.Row="2" Source="./Resources/Images/chef3.png"/>
    </Grid>
</Window>
